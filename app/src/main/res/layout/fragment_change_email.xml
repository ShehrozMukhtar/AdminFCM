<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FF2E8828"
    tools:context=".main_activity.email_change.ChangeEmailFragment">
    <TextView
        android:id="@+id/login_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:text="Update"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/irish"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/balance"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="128dp"
            android:layout_height="105dp"
            android:src="@drawable/govt"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold"
            android:fontFamily="@font/robotoregular"
            android:textColor="#FF4C4D4F"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            />

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/circular2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:src="@drawable/email" />

            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:background="@drawable/circular2"
                android:hint="Enter Email"
                android:maxLines="1"
                android:textSize="14dp"
                android:inputType="textEmailAddress"
                android:textColorHint="#FFA8A8A8" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:fontFamily="@font/robotoregular"
            android:textColor="#FF4C4D4F"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            />
        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="47dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/circular2"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:src="@drawable/ic_lock" />

            <EditText
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/circular2"
                android:textColorHint="#FFA8A8A8"
                android:hint="Enter Password"
                android:maxLines="1"
                android:textStyle="bold"
                android:textSize="14dp"
                android:inputType="textPassword"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/eye"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_eye"
                />
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/login_button"
            android:text="Update"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>