<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF2E8828"
    tools:context=".main_activity.eligible_fragment.User_Detail_Activity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user_detail"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/backward"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/text_eligible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="User Details"
            android:fontFamily="@font/irish"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@drawable/balance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_detail">
        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="#FF4C4D4F"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:id="@+id/enter_name"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:textStyle="bold"
            android:background="@drawable/circular"
            android:hint="Enter Name"
            android:textAlignment="center"
            android:maxLines="1"
            android:textSize="18dp"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:textColorHint="#FFA8A8A8"
            app:layout_constraintTop_toBottomOf="@+id/name_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="30dp"
            />
        <TextView
            android:id="@+id/father_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="#FF4C4D4F"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enter_name"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            />
        <EditText
            android:id="@+id/enter_phone_number"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:textStyle="bold"
            android:background="@drawable/circular"
            android:hint="Enter Phone Number"
            android:textAlignment="center"
            android:maxLines="1"
            android:textSize="18dp"
            android:inputType="number"
            android:layout_marginTop="5dp"
            android:textColorHint="#FFA8A8A8"
            app:layout_constraintTop_toBottomOf="@+id/father_name_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="30dp"
            />
        <TextView
            android:id="@+id/gender_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="#FF4C4D4F"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enter_phone_number"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            />
        <RadioGroup
            android:id="@+id/enter_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/gender_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:text="Option"
            >
            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="20dp"
                android:fontFamily="@font/montserrat_semibold"

                />
            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="20dp"
                android:fontFamily="@font/montserrat_semibold"

                />
        </RadioGroup>
        <TextView
            android:id="@+id/id_card_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Card Number"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="#FF4C4D4F"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enter_gender"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:id="@+id/enter_card_number"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:textStyle="bold"
            android:background="@drawable/circular"
            android:hint="Enter Card Number"
            android:textAlignment="center"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="18dp"
            android:inputType="number"
            android:layout_marginTop="2dp"
            android:textColorHint="#FFA8A8A8"
            app:layout_constraintTop_toBottomOf="@+id/id_card_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="30dp"
            />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="#FF4C4D4F"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enter_card_number"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            />
        <EditText
            android:id="@+id/enter_address"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:textStyle="bold"
            android:background="@drawable/circular"
            android:hint="Enter Person Address"
            android:textAlignment="center"
            android:maxLines="1"
            android:textSize="18dp"
            android:inputType="text"
            android:layout_marginTop="2dp"
            android:textColorHint="#FFA8A8A8"
            app:layout_constraintTop_toBottomOf="@+id/address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="30dp"
            />
        <TextView
            android:id="@+id/date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Purchase"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="#FF4C4D4F"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enter_address"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            />
        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="0dp"
            android:layout_height="62dp"
            app:layout_constraintTop_toBottomOf="@id/date_txt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginHorizontal="30dp"
            >
            <TextView
                android:id="@+id/enter_date"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:background="@drawable/circular"
                android:hint="Enter Date of Purchase"
                android:textAlignment="center"
                android:maxLines="1"
                android:layout_marginTop="5dp"
                android:textSize="18dp"
                android:inputType="date"
                android:textColorHint="#FFA8A8A8"
                android:gravity="center"
                />

            <ImageView
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/calendar"
                app:layout_constraintLeft_toLeftOf="parent" />


        </FrameLayout>
        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="#FF4C4D4F"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frame"
            />

        <EditText
            android:id="@+id/enter_city"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/circular"
            android:hint="Enter City"
            android:inputType="text"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColorHint="#FFA8A8A8"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/city" />
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price of Flour"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="#FF4C4D4F"
            android:layout_marginLeft="20dp"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/enter_city"
            />


        <EditText
            android:id="@+id/enter_price"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:textStyle="bold"
            android:background="@drawable/circular"
            android:text="RS.650"
            android:textAlignment="center"
            android:maxLines="1"
            android:textSize="18dp"
            android:inputType="text"
            android:layout_marginTop="2dp"
            android:textColorHint="#FFA8A8A8"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/price"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/login_button"
            android:fontFamily="@font/montserrat_semibold"
            android:text="submit"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/enter_price"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>