<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF2E8828"
    tools:context=".main_activity.eligible_fragment.EligibleActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/eligible"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/backward"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/text_eligible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="ELIGIBILITY"
            android:fontFamily="@font/irish"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/balance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eligible">

        <TextView
            android:id="@+id/scan_qr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoregular"
            android:text="SCAN USER ID CARD "
            style="@style/TextAppearance.MaterialComponents.Headline4"
            android:textStyle="bold"
            android:textColor="#FF4C4D4F"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/scan_small_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoregular"
            android:text="Scan Qr code to verify information "
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#FFbababa"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scan_qr"
            android:layout_marginTop="5dp"
            />

        <ImageView
            android:id="@+id/qr_code"
            android:layout_width="179dp"
            android:layout_height="181dp"
            android:layout_marginTop="68dp"
            android:background="@drawable/circular"
            android:src="@drawable/qrcode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scan_small_txt" />

        <TextView
            android:id="@+id/cnic_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoregular"
            android:text="Or Enter CNIC Manually "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/qr_code"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:id="@+id/cnic_head_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CNIC"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_semibold"
            android:textColor="#FF4C4D4F"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cnic_txt"
            android:textSize="18sp"
            android:layout_marginTop="50dp"
            />
        <EditText
            android:id="@+id/enter_cnic"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textStyle="bold"
            android:background="@drawable/circular"
            android:hint="Enter CNIC"
            android:textAlignment="center"
            android:maxLines="1"
            android:textSize="18dp"
            android:inputType="number"
            android:layout_marginTop="10dp"
            android:textColorHint="#FFA8A8A8"
            app:layout_constraintTop_toBottomOf="@+id/cnic_head_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="30dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/login_button"
            android:fontFamily="@font/montserrat_semibold"
            android:text="submit"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enter_cnic" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>